<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/touch_bg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/ivBookListCover"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/book1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/ivBookListCover">

        <TextView
            android:id="@+id/tvBookListTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="此单在手，书荒不再有！"
            android:textColor="@color/common_h1"
            android:textSize="16sp" />



        <TextView
            android:id="@+id/tvBookListDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvBookListTitle"
            android:layout_marginBottom="10dp"
            android:ellipsize="end"
            android:lines="2"
            android:text="应有尽有！注：sadaa到你家撒多军奥所大所多军军奥大所所所所所所所所所所所所所所所所撒奥奥奥奥奥奥奥奥奥奥奥奥奥奥奥奥奥奥奥奥奥奥随时有可能添加新萨达撒发沙发沙发上发发发发书"
            android:textColor="@color/common_h2"
            android:textSize="13sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/author"
            android:layout_alignBottom="@+id/tvBookAuthor"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:id="@+id/imageView6" />

        <TextView
            android:id="@+id/tvBookAuthor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="选择"
            android:textColor="@color/common_h2"
            android:textSize="13sp"
            android:layout_toRightOf="@+id/imageView6"
            android:layout_toEndOf="@+id/imageView6"
            android:layout_below="@+id/tvBookListDesc" />

    </RelativeLayout>

</RelativeLayout>