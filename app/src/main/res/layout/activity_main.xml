<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.reeching.epub.MainActivity">

    <FrameLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/view"></FrameLayout>
    <RelativeLayout
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="@color/colorgray1"
        android:layout_above="@+id/radioGroup"
        ></RelativeLayout>
    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true">
        <RadioButton
            android:id="@+id/radio_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:text="首页"
            android:checked="true"
            android:drawableTop="@drawable/slector_radiobutton_1"
            style="@style/MTabStyle"
            />

        <RadioButton
            android:id="@+id/radio_sort"
            style="@style/MTabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/slector_radiobutton_2"
            android:text="分类" />

        <RadioButton
            android:id="@+id/radio_information"
            style="@style/MTabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/slector_radiobutton_3"
            android:drawablePadding="5dp"
            android:text="消息"
            />
        <RadioButton
            android:id="@+id/radio_mine"
            style="@style/MTabStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/slector_radiobutton_4"
            android:drawablePadding="5dp"
            android:text="我的"
            />

    </RadioGroup>



</RelativeLayout>
