<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/title"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/top_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hometop_title"
        style="@style/topStyle"
        />
    <TextView
        android:id="@+id/top_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="删除"
        android:visibility="invisible"
        style="@style/topStyle"
        />
    <TextView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/top_edit"
        android:layout_toRightOf="@+id/top_edit"
        style="@style/topStyle"
        android:text="取消"
        android:visibility="invisible"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/relativeLayout3" />
    <TextView
        android:id="@+id/top_book"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/homebook_title"
        style="@style/topStyle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/relativeLayout3">

        <ImageView
            android:id="@+id/top_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_toLeftOf="@+id/top_add"
            android:layout_toStartOf="@+id/top_add"
            android:background="@mipmap/search" />

        <ImageView
            android:id="@+id/top_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/add"
            android:layout_margin="10dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:id="@+id/top_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全选"
            android:visibility="gone"
            style="@style/topStyle"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
        <TextView
            android:id="@+id/top_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:visibility="gone"
            style="@style/topStyle"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorgray1"
        android:layout_below="@+id/top_book"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout3"></RelativeLayout>


</RelativeLayout>
